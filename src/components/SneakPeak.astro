---
import { Image } from 'astro:assets'

import image1 from '../assets/gallery/1.png'
import image2 from '../assets/gallery/2.png'
import image3 from '../assets/gallery/3.png'
import image4 from '../assets/gallery/4.png'
import image5 from '../assets/gallery/5.png'
---

<style>
	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(8, 1fr);
		grid-template-rows: repeat(2, 250px);
		gap: 12px;

		& .grid-item {
			&:first-of-type {
				grid-row: 1 / 3;
				grid-column: 1 / 3;
			}

			&:nth-of-type(2) {
				grid-column: 3 / 5;
			}

			&:nth-of-type(3) {
				grid-column: 5 / 9;
			}

			&:nth-of-type(4) {
				grid-column: 3 / 6;
			}

			&:nth-of-type(5) {
				grid-column: 6 / 9;
			}
		}
	}
</style>

<section class="container mx-auto max-w-6xl mb-64 px-4 md:px-0">
	<h2 class="text-4xl text-center mb-8">
		Sneak-Peek <span class="text-[#ccbaaa]">at the</span> Space
	</h2>
	<p class="text-center lg:max-w-[50%] mx-auto">
		Picture airy rooms with plants, calming sage walls, and modern furniture
		ready for yout next breakthrough session
	</p>

	<div class="md:grid mt-14">
		<div class="grid-item">
			<Image src={image3} class="w-full h-full" alt="" />
		</div>
		<div class="grid-item">
			<Image src={image4} class="w-full h-full" alt="" />
		</div>
		<div class="grid-item">
			<Image src={image5} class="w-full h-full" alt="" />
		</div>
		<div class="grid-item">
			<Image src={image1} class="w-full h-full" alt="" />
		</div>
		<div class="grid-item">
			<Image src={image2} class="w-full h-full" alt="" />
		</div>
	</div>
</section>
