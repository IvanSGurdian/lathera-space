---
import { Image } from 'astro:assets'
import logo from '../assets/images/logo/LaTheraLogo.svg'

const navItems = [
	{
		label: 'Home for professionals',
		href: '/',
	},
	{
		label: 'Find a therapist',
		href: '/find-a-therapist',
	},
	{
		label: 'About',
		href: '/about',
	},
	{
		label: 'Blog',
		href: '/blog',
	},
	{
		label: 'Contact',
		href: '/contact',
	},
]
---

<nav class="px-4 py-2 bg-[#f1f2ed] text-[#8b9886]">
	<div
		class="container mx-auto max-w-6xl flex items-center gap-4 justify-between"
	>
		<Image src={logo} alt="Lathera" width={100} height={100} />
		<ul class="hidden md:flex flex-1 gap-4 justify-between items-center none">
			{
				navItems.map((item) => (
					<li>
						<a href={item.href}>{item.label}</a>
					</li>
				))
			}
		</ul>

		<div class="md:hidden">
			<button class="text-[#8b9886] focus:outline-none"> Menu </button>
		</div>

		<div
			class="mobile-menu hidden md:hidden absolute top-16 left-0 w-full bg-[#f1f2ed] text-[#8b9886]"
		>
			<ul class="flex flex-col gap-2 p-4">
				{
					navItems.map((item) => (
						<li>
							<a href={item.href}>{item.label}</a>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</nav>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const menuButton = document.querySelector('button')
		const mobileMenu = document.querySelector('.mobile-menu')

		if (menuButton) {
			menuButton.addEventListener('click', () => {
				if (mobileMenu) {
					mobileMenu.classList.toggle('hidden')
				}
			})
		}
	})
</script>
